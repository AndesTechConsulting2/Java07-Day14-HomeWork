<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="SiteSuite">

    <listeners>
        <listener class-name="ru.raiffeisen.training.TestListener"/>
        <listener class-name="ru.raiffeisen.training.SuiteListener"/>
    </listeners>

    <test name="SiteLoginTest">
        <groups>
            <run>
                <exclude name="pageTests"/>
            </run>
        </groups>
        <packages>
            <package name="ru.raiffeisen.training"/>
        </packages>
    </test>

    <test name="SitePageTests" parallel="methods" thread-count="5">
        <groups>
            <run>
                <include name="pageTests"/>
            </run>
        </groups>
        <packages>
            <package name="ru.raiffeisen.training"/>
        </packages>
    </test>

</suite>