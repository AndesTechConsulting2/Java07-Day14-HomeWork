<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="SiteSuite" parallel="methods" thread-count="6">
    <listeners>
        <listener class-name="ru.raiffeisen.training.TestListener"></listener>
    </listeners>
    <test name="SiteLoginTest">
       <classes>
           <class name="ru.raiffeisen.training.AppTest"></class>
       </classes>
    </test>
    <test name="PageTest" parallel="methods" thread-count="1">
        <groups>
            <run><include name="pageTest"></include></run>
        </groups>
        <classes>
            <class name="ru.raiffeisen.training.AppTest"></class>
        </classes>
    </test>
</suite>


