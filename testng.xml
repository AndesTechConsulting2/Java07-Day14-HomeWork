<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">


<suite name="SiteSuite" >

    <test name="SiteLoginTest">
        <groups>
            <run>
                <include name="LoginTest"/>
                <exclude name="pageTest"/>
            </run>
        </groups>
        <classes>
            <class name="org.raiffeisen.ruanad4.learning.TestLogin" />
        </classes>
    </test>

    <test name="PageTests" parallel="methods" thread-count="3">
        <groups>
            <run>
                <include name="pageTests"/>
                <exclude name="LoginTest"/>
            </run>
        </groups>
        <classes>
            <class name="org.raiffeisen.ruanad4.learning.TestLogin" />
        </classes>
    </test>

</suite>